<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textSize="20dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="Menjumlahkan 2 Buah Bilangan"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@id/textView"
        android:layout_marginTop="50dp"
        android:text="Masukkan Bilangan Pertama"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginTop="50dp"
        android:layout_below="@id/txtBil1"
        android:text="Masukkan Bilangan Kedua"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>
    <EditText
        android:id="@+id/txtBil1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/text"/>
    <EditText
        android:id="@+id/txtBil2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/text2"/>
    <Button
        android:id="@+id/btnCekBil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/txtBil2"
        android:text="Hitung Bilangan"
        android:onClick="btnCekBil"/>
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnCekBil"
        android:text="Hasil Penjumlahan"
        android:textSize="30dp"/>
    <EditText
        android:id="@+id/hasil"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>